<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <%- include('header') -%>
    <main>

        <h2 style="text-align: center;"><%= title %> </h2>

        <% if (items.length > 0) { %>
          <p style="text-align: center;">Delete the following items before attempting to delete this category:</p> 
          <div  id="items-container">
            <% items.forEach(function(item) { %>
              <div class="itemDiv">
                <% if (item.mainImageUrl.startsWith('up')) { %>
                  <img class="categoryItemsImg" src="<%= '/' + item.mainImageUrl %>">
                <% } else { %>
                  <img class="categoryItemsImg" src="<%= item.mainImageUrl %>">
                <% } %>
                <a class="categoryitemName" href="<%= item.url %>"><%= item.name %></a>
                <p class="categoryitemPrice"><%= item.price %></p>
              </div>
            <% }); %>
          </div>
       
        <% } else { %>     
        
          <p style="text-align: center;">Do you really want to delete this category?</p> 
          <p style="text-align: center;"><%= category.name %></p>
          
          <form method='POST'>
            <label for="categoryid"></label>
            <input type='hidden' name='categoryid' value="<%= category._id %>"/>
          
            <button style="margin-left: 45%;" id="deletebtn" type='submit'>Delete</button>
          </form>
        <% } %>
       
        
    </main>
</html> 