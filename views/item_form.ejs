<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <%- include('header') -%>
    <main>

        <h2 style="text-align: center; margin-top: 70px;"><%= title %></h2>
      <div id="center-form">
        <form method='POST' enctype="multipart/form-data">

            <div class='form-group'>

              <label for='name'>Name: </label><br>
              <input id='name' class='form-control' type='text' placeholder='Name of item' name='name' value='<%= item?.name || "" %>'  required /><br>

              <label for='price'>Price: </label><br>
              <input id='price' class='form-control' type='text' placeholder='Price of item' name='price' value='<%= item?.price || "" %>'  required /><br>

              <label for='stock'>In Stock: </label><br>
              <input id='stock' class='form-control' type='text' placeholder='Stock quantity' name='stock' value='<%= item?.stock || "" %>'  required /><br>

              <br>
              <label for='description'>Product Description:</label><br>
              <textarea id='product-description' class='form-control' rows="4" cols="50" placeholder='Description for Item' name='description'  required><%= item.description || "" %></textarea>
  
              <% if (category.length) { %> 
                <p>Category</p>         
                <% category.forEach(function(category) { %>
                  <label for="category">
                    <input type="checkbox" id="title_1" name="category" value="<%= category._id %>"/>  <%= category.name %>
                  </label>
                <% }); %>   
              <% } %>
              
              <br>
              <label for="mainImage">Main Product Image</label> <br>
              <input type="file" name="mainImageUrl" /><br>
              
              <button  id="create-btn" type="submit">Create</button>

            </div>
            <div id="errors-div">
            <% if (errors && errors.length) { %>
              <ul>
                <% errors.forEach(function(error) { %>
                  <li><%= error.msg %></li>
                <% }); %>
              </ul>
            <% } %>
          </div>

          </form>
        </div>
      </main>
    </body>
</html>